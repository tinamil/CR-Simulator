<?xml version="1.0"?>
<block>
  <name>channel_selector</name>
  <key>multihop_channel_selector</key>
  <category>multihop</category>
  <import>import multihop</import>
  <make>multihop.channel_selector($nchannels)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Number of Channels</name>
    <key>nchannels</key>
    <value>num_channels</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>int</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>int</type>
  </source>
</block>
