<?xml version="1.0"?>
<block>
  <name>multihop_rendezvous</name>
  <key>multihop_multihop_rendezvous</key>
  <category>multihop</category>
  <import>import multihop</import>
  <make>multihop.multihop_rendezvous($seed, $freq_rate, $samp_rate, $num_channels, $window_size, $search_speed)</make>
  
  <param>
    <name>Number of Channels</name>
    <key>num_channels</key>
    <value>num_channels</value>
    <type>int</type>
  </param> 
  
  <param>
    <name>Seed</name>
    <key>seed</key>
    <value>1</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Freq Hop Rate</name>
    <key>freq_rate</key>
    <value>freqhop_rate</value>
    <type>real</type>
  </param>
  
  <param>
    <name>Sample Rate</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>real</type>
  </param>
  
  <param>
    <name>Max Window Size</name>
    <key>window_size</key>
    <value>num_channels</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Search Speed</name>
    <key>search_speed</key>
    <value>search_speed</value>
    <type>int</type>
  </param>
  
  <sink>
    <name>in</name>
    <type>int</type>
  </sink>
</block>
